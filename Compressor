<script>
    // DOM element references
    // Get all necessary HTML elements by their IDs
    const imageInput = document.getElementById('image-input');
    const compressionLevel = document.getElementById('compression-level');
    const compressionValue = document.getElementById('compression-value');
    const compressBtn = document.getElementById('compress-btn');
    const previewContainer = document.getElementById('preview-container');
    const compressedImage = document.getElementById('compressed-image');
    const downloadLink = document.getElementById('download-link');
    const fileSizeInfo = document.getElementById('file-size-info');
    const loader = document.querySelector('.loader');
    const uploadContainer = document.getElementById('uploadContainer');
    const previewThumbnail = document.getElementById('previewThumbnail');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const uploadProgress = document.getElementById('uploadProgress');

    // Variable to store uploaded file
    let uploadedFile = null;

    // Event listener for compression level slider
    compressionLevel.addEventListener('input', () => {
        // Update displayed compression percentage
        compressionValue.textContent = `${compressionLevel.value}%`;
        // Update save percentage in button (100 - current value)
        document.getElementById('size-percentage').textContent = 100 - parseInt(compressionLevel.value);
    });

    // Drag and drop event handlers
    uploadContainer.addEventListener('dragover', (e) => {
        e.preventDefault();
        // Visual feedback for drag over
        uploadContainer.classList.add('dragover');
        uploadProgress.style.width = '100%';
    });

    uploadContainer.addEventListener('dragleave', () => {
        // Visual feedback for drag leave
        setTimeout(() => {
            uploadContainer.classList.remove('dragover');
            uploadProgress.style.width = '0%';
        }, 300);
    });

    uploadContainer.addEventListener('drop', (e) => {
        e.preventDefault();
        // Handle dropped file
        uploadContainer.classList.remove('dragover');
        uploadProgress.style.width = '0%';
        const file = e.dataTransfer.files[0];
        validateAndHandleFile(file);
    });

    // File input change handler
    imageInput.addEventListener('change', (e) => {
        // Handle selected file
        const file = e.target.files[0];
        validateAndHandleFile(file);
    });

    // Initialize ads after DOM load
    document.addEventListener('DOMContentLoaded', () => {
        ['.left-ad', '.right-ad', '.ad-container'].forEach(selector => {
            const ads = document.querySelectorAll(selector + ' .adsbygoogle');
            ads.forEach(ad => {
                (adsbygoogle = window.adsbygoogle || []).push({});
            });
        });
    });
    // File validation and processing
    function validateAndHandleFile(file) {
        if (!file) return;
        
        // Check file type
        if (!file.type.match(/image\/(jpeg|png|webp)/)) {
            showError('Unsupported file type! Only JPG, PNG, and WEBP allowed.');
            return;
        }

        // Verify image integrity
        const img = new Image();
        img.onload = () => {
            // Valid image handling
            uploadedFile = file;
            previewThumbnail.src = URL.createObjectURL(file);
            previewThumbnail.style.display = 'block';
            successMessage.textContent = 'Upload successful!';
        };
        img.onerror = () => showError('Invalid or corrupted image file!');
        img.src = URL.createObjectURL(file);
    }

    // Compression button click handler
    compressBtn.addEventListener('click', async () => {
        if (!uploadedFile) {
            showError('Please select an image first!');
            return;
        }

        try {
            showLoading(true);
            // Perform image compression
            const compressedBlob = await compressImage(uploadedFile, compressionLevel.value);
            
            // Determine file type
            const fileType = uploadedFile.type.includes('png') ? 'image/png' : 
                            uploadedFile.type.includes('webp') ? 'image/webp' : 'image/jpeg';

            // Update UI with compressed image
            compressedImage.src = URL.createObjectURL(compressedBlob);
            downloadLink.href = compressedImage.src;
            downloadLink.style.display = 'block';
            downloadLink.download = `compressed-image.${fileType.split('/')[1]}`; 

            // Calculate and display file sizes
            const originalSize = (uploadedFile.size / 1024).toFixed(2);
            const compressedSize = (compressedBlob.size / 1024).toFixed(2);
            fileSizeInfo.innerHTML = `<span>Original: ${originalSize} KB</span> <span>Compressed: ${compressedSize} KB</span>`;
        } catch (error) {
            showError('Error compressing image. Please try again.');
        } finally {
            showLoading(false);
        }
    });

    // Image compression function
    function compressImage(file, quality) {
        return new Promise((resolve, reject) => {
            // File reader to load image
            const reader = new FileReader();
            reader.onload = (e) => {
                const img = new Image();
                img.onload = () => {
                    // Canvas setup for compression
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');
                    canvas.width = img.width;
                    canvas.height = img.height;
                    ctx.drawImage(img, 0, 0);

                    // Determine output format
                    const fileType = file.type.includes('png') ? 'image/png' : 
                                    file.type.includes('webp') ? 'image/webp' : 'image/jpeg';

                    // Convert canvas to compressed blob
                    canvas.toBlob(blob => {
                        blob ? resolve(blob) : reject('Compression failed');
                    }, fileType, quality / 100);
                };
                img.onerror = reject;
                img.src = e.target.result;
            };
            reader.onerror = reject;
            reader.readAsDataURL(file);
        });
    }

    // UI helper functions
    function showLoading(show) {
        // Toggle loading animation
        loader.style.display = show ? 'block' : 'none';
        compressBtn.disabled = show;
    }

    function showError(message) {
        // Display error message
        errorMessage.textContent = message;
        uploadContainer.classList.add('error');
        setTimeout(() => {
            errorMessage.textContent = '';
            uploadContainer.classList.remove('error');
        }, 3000);
    }
</script>

</body>
</html>
